<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados Medidor"
        android:id="@+id/textView"
        android:layout_gravity="center" />

    <TextView
        android:textColor="#fff458"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/image_dialog_textView"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:textSize="@android:dimen/app_icon_size" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/image_dialog_imageView"
        android:layout_gravity="center"
        android:contentDescription="@string/image_dialog_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados Cliente"
        android:id="@+id/textView2"
        android:layout_gravity="center" />

    <TextView
        android:textColor="#fff458"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/image_dialog_textView2"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:textSize="@android:dimen/app_icon_size" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/image_dialog_imageView2"
        android:contentDescription="@string/image_dialog_description"
        android:layout_gravity="center_horizontal" />


</LinearLayout>